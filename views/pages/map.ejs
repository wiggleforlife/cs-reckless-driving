<!doctype html>
<html lang="en_US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Map</title>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css">
    <!-- Make sure you put this AFTER Leaflet's CSS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
    <script src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js" crossorigin=""></script>
    
    <style>
        #map {
            height: 1000px;
        }
    </style>
</head>
<body>
<%- include('../partials/nav') %>
<div id="map"></div>
<script>
    const map = L.map('map', {center: [40.7, -73.9], zoom: 11});

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    const markers = L.markerClusterGroup();
    <% let reasons = []; %>
    <% for (var i = 0; i < incidents.length; i++) { %>
        <% var point = incidents[i] %>
        <% reasons.push(point[11] + (point[12] !== "" && point[12] !== "Unspecified" && point[12] !== point[11] ? ", " + point[12] : "")) %>
        markers.addLayer(L.marker(["<%= point[4] %>", "<%= point[5] %>"]).bindPopup("<%= point[0] + " - " + point[1] + "<br>" + point[9] + " injured, " + point[10] + " killed because of " + reasons[i] %>")); // FIXME <br> no longer works
    <% } %>

    map.addLayer(markers);
</script>
</body>
</html>